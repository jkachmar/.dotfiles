#!/usr/bin/env bash

# fuckin hell
autorandr --change
launch-polybar
source ~/.xsessionrc

# adjust god damn alacritty font sizes
font_size=14.0

if [[ -n $(xrandr | rg '^DP.?1 connected') ]]
then
  echo "setting font-size to big sizes for desktop"
  font_size=14.0
else
  echo "setting font-size to 10.0 for laptop"
  font_size=14.0
fi

sed -i "s/^  size: ....$/  size: $font_size/" ~/.config/alacritty/alacritty.yml
