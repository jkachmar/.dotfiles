#!/usr/bin/env bash

killall -q polybar
killall -q .polybar-wrapped

primary_dp2=$(xrandr | rg '^DP2.*primary')
primary_dp1=$(xrandr | rg '^DP1.*primary')

if [[ -n $primary_dp2 ]]
then
  polybar dp2 -c "$DOT/polybar/config" &
elif [[ -n $primary_dp1 ]]
then
  polybar dp1 -c "$DOT/polybar/config" &
else
  polybar example -c "$DOT/polybar/config" &
fi
